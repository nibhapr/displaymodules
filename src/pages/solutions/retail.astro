  .animate-fade-in-delayed {
    animation: fadeIn 1s ease-out 0.5s both;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Improve carousel performance */
