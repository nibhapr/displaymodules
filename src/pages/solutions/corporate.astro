---
import Layout from '../../layouts/Layout.astro';

const title = "Corporate Display Solutions | LED, LCD & Interactive Screens | Lovosis Display"
const description = "Transform your corporate space with professional LED displays, LCD video walls, and interactive screens. Enhance collaboration, convey brand image, and create impressive meeting environments with our cutting-edge display technology."


const sd = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Corporate Display Solutions",
  "description": "Professional display solutions for corporate environments including LED walls, LCD screens, and interactive displays",
  "brand": {
    "@type": "Brand",
    "name": "Lovosis Display"
  },
  "category": "Display Technology",
  "offers": {
    "@type": "AggregateOffer",
    "availability": "https://schema.org/InStock"
  },
  "image": "https://images.unsplash.com/photo-1497366216548-37526070297c?ixlib=rb-4.0.3",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "lastReviewed": "2025-03-04T09:13:52Z"
  },
  "subjectOf": [
    {
      "@type": "Article",
      "name": "Enhancing Corporate Environments with Modern Display Solutions",
      "author": {
        "@type": "Person",
        "name": "Gafoor TC"
      },
      "datePublished": "2025-01-15"
    }
  ]
}
---

<Layout title={title} description={description} sd={sd}>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative overflow-hidden">
      <!-- Background Layer with Dynamic Elements -->
      <div class="absolute inset-0 z-0">
        <!-- Optimized Background Image -->
        <img 
          src="/images/corporate/hero-bg.jpg" 
          alt="" 
          aria-hidden="true"
          class="w-full h-full object-cover"
          width="1920" 
          height="1080"
          fetchpriority="high"
        />
        
        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 via-gray-900/80 to-purple-900/90 mix-blend-multiply"></div>
        
        <!-- Animated Grid Pattern -->
        <div class="absolute inset-0 bg-[url('/patterns/grid.svg')] bg-repeat opacity-10"></div>
      </div>

      <!-- Content Container -->
      <div class="container relative z-10 mx-auto px-4 py-32 lg:py-40 min-h-[80vh] flex flex-col justify-center">
        <div class="max-w-4xl">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-blue-500/20 backdrop-blur-sm border border-blue-400/20 mb-6">
            <span class="h-2 w-2 bg-blue-400 rounded-full animate-pulse"></span>
            <span class="text-blue-100 text-sm font-medium tracking-wide">ENTERPRISE SOLUTIONS</span>
          </div>
          
          <!-- Main Heading with Visual Enhancement -->
          <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold text-white leading-tight mb-6">
            <span class="block">Transform Your</span>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-indigo-300">
              Corporate Environment
            </span>
          </h1>
          
          <!-- Description with Optimized Readability -->
          <p class="text-xl text-blue-50 max-w-2xl mb-10 leading-relaxed">
            Enhance collaboration, showcase your brand, and create impressive meeting environments with our cutting-edge display technology.
          </p>
          
          <!-- Action Buttons with Improved Accessibility -->
          <div class="flex flex-wrap gap-4">
            <a 
              href="/company/contact-us" 
              class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-300 flex items-center group focus:outline-none focus:ring-2 focus:ring-blue-400 focus:ring-offset-2 focus:ring-offset-gray-900"
            >
               Enquiry Now
              <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </a>
            <a 
              href="/support/how-to" 
              class="px-8 py-4 bg-transparent border border-white/30 hover:bg-white/10 text-white font-medium rounded-lg transition-colors duration-300 flex items-center group focus:outline-none focus:ring-2 focus:ring-white/50 focus:ring-offset-2 focus:ring-offset-gray-900"
            >
              Demo Video's
              <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Customer Stats Bar -->
        <div class="mt-16 md:mt-20 grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8 py-6 px-4 md:px-8 rounded-2xl bg-white/10 backdrop-blur-md border border-white/5">
          <div class="text-center">
            <span class="block text-3xl md:text-4xl font-bold text-white">500+</span>
            <span class="text-blue-200 text-sm mt-1">Corporate Clients</span>
          </div>
          <div class="text-center">
            <span class="block text-3xl md:text-4xl font-bold text-white">98%</span>
            <span class="text-blue-200 text-sm mt-1">Satisfaction Rate</span>
          </div>
          <div class="text-center">
            <span class="block text-3xl md:text-4xl font-bold text-white">4.9<span class="text-2xl">/5</span></span>
            <span class="text-blue-200 text-sm mt-1">Client Rating</span>
          </div>
          <div class="text-center">
            <span class="block text-3xl md:text-4xl font-bold text-white">10+</span>
            <span class="text-blue-200 text-sm mt-1">Years Experience</span>
          </div>
        </div>
      </div>
      
      <!-- Wave Divider -->
      <div class="absolute bottom-0 left-0 right-0 h-16 md:h-24">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320" class="h-full w-full" preserveAspectRatio="none">
          <path fill="#F9FAFB" fill-opacity="1" d="M0,96L48,112C96,128,192,160,288,160C384,160,480,128,576,133.3C672,139,768,181,864,197.3C960,213,1056,203,1152,181.3C1248,160,1344,128,1392,112L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path>
        </svg>
      </div>
    </section>

    <!-- Industry Requirements Section -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Industry Requirements</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Requirement 1 -->
          <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
            <div class="h-16 w-16 bg-blue-500 rounded-full flex items-center justify-center mb-6 mx-auto">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-center mb-4">Remove Communication Barriers</h3>
            <p class="text-gray-600 text-center">Interaction is happening all the time. The smooth interaction determines the improvement of work efficiency.</p>
          </div>

          <!-- Requirement 2 -->
          <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
            <div class="h-16 w-16 bg-green-500 rounded-full flex items-center justify-center mb-6 mx-auto">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-center mb-4">Improve Corporate Image</h3>
            <p class="text-gray-600 text-center">Companies need a window to show excellent corporate culture and excellent product strength.</p>
          </div>

          <!-- Requirement 3 -->
          <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow">
            <div class="h-16 w-16 bg-purple-500 rounded-full flex items-center justify-center mb-6 mx-auto">
              <svg class="h-8 w-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-center mb-4">Motivate Employees</h3>
            <p class="text-gray-600 text-center">Driving employees to work spontaneously is a key work that affects the efficiency of enterprises.</p>
          </div>
        </div>
      </div>
    </section>



    <!-- Lovosis Display Solutions Section -->
    <section class="py-24 relative overflow-hidden bg-gradient-to-br from-gray-900 via-blue-900 to-gray-900">
      <!-- Decorative Elements -->
      <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-500 via-purple-500 to-blue-500"></div>
      <div class="absolute inset-0 bg-[url('/patterns/circuit-board.svg')] opacity-5 mix-blend-overlay pointer-events-none"></div>
      
      <div class="container mx-auto px-4">
        <div class="text-center max-w-3xl mx-auto mb-16">
          <span class="inline-block px-3 py-1 rounded-full bg-blue-500/20 text-blue-300 text-sm font-medium tracking-wide mb-4">DISPLAY SOLUTIONS</span>
          <h2 class="text-4xl md:text-5xl font-bold text-white mb-8">What makes Lovosis LED Story Walls stand out?</h2>
          <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mb-8"></div>
          <p class="text-xl text-gray-300 leading-relaxed">
            Lovosis LED Story Walls stand out due to their vibrant visuals, customizable design, and energy-efficient technology. Our LED displays deliver dynamic, immersive experiences that captivate audiences, whether for retail, marketing, or event applications. With high brightness, seamless video playback, and superior durability, Lovosis LED walls are designed to enhance brand storytelling and engage viewers with impactful content.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Solution 1 -->
          <div class="group bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden shadow-2xl border border-white/10 hover:border-blue-500/30 transition-all duration-300">
            <div class="relative h-56 overflow-hidden">
              <img 
                src="/Corporate/img1.jpg" 
                alt="Interactive Smart Display for Meeting Rooms" 
                class="w-full h-full object-contain transform group-hover:scale-110 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-blue-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-blue-600/90 text-white text-xs font-medium rounded-full">Meeting Room</span>
              </div>
            </div>
            <div class="p-8">
              <h3 class="text-xl font-bold text-white mb-4 group-hover:text-blue-400 transition-colors">Interactive Ideation</h3>
              <p class="text-gray-300 mb-6">Lovosis Display’s InstaHub smart interactive displays revolutionize collaboration in small to medium meeting rooms. With features like real-time annotation, easy idea sharing, and seamless interactive ideation, InstaHub encourages team creativity and collaborative creation. Whether it's for brainstorming sessions or strategy discussions, our displays enable teams to work together effortlessly, turning meetings into dynamic and productive idea hubs.</p>
             
            </div>
          </div>

          <!-- Solution 2 -->
          <div class="group bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden shadow-2xl border border-white/10 hover:border-blue-500/30 transition-all duration-300">
            <div class="relative h-56 overflow-hidden">
              <img 
                src="/Corporate/img2.jpg" 
                alt="LED Display for Corporate Branding" 
                class="w-full h-full object-contain transform group-hover:scale-110 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-blue-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-purple-600/90 text-white text-xs font-medium rounded-full">Corporate Identity</span>
              </div>
            </div>
            <div class="p-8">
              <h3 class="text-xl font-bold text-white mb-4 group-hover:text-blue-400 transition-colors">Brand Showcase</h3>
              <p class="text-gray-300 mb-6">Lovosis’ ultra fine-pixel (0.9mm) LED displays are designed to make a powerful first impression at your corporate entrance by showcasing your brand identity and company values with stunning clarity. These high-definition displays deliver vibrant visuals that capture attention and reinforce your brand's presence. With seamless integration and exceptional brightness, Lovosis LED displays ensure that your corporate space reflects your professionalism and innovation from the moment visitors step in.</p>
              
            </div>
          </div>

          <!-- Solution 3 -->
          <div class="group bg-white/5 backdrop-blur-sm rounded-2xl overflow-hidden shadow-2xl border border-white/10 hover:border-blue-500/30 transition-all duration-300">
            <div class="relative h-56 overflow-hidden">
              <img 
                src="/Corporate/img3.jpg" 
                alt="Video Wall for Conference Rooms" 
                class="w-full h-full object-contain transform group-hover:scale-110 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-blue-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute top-4 left-4">
                <span class="px-3 py-1 bg-green-600/90 text-white text-xs font-medium rounded-full">Conference Room</span>
              </div>
            </div>
            <div class="p-8">
              <h3 class="text-xl font-bold text-white mb-4 group-hover:text-blue-400 transition-colors">Immersive Presentations</h3>
              <p class="text-gray-300 mb-6">Lovosis’ LCD video walls and fine-pixel LED displays are designed to elevate large meeting environments by delivering stunning visual clarity and immersive presentation experiences. These displays ensure that every detail is sharp, enhancing the impact of your presentations and making complex ideas easy to grasp. With seamless integration and high-resolution visuals, Lovosis displays turn presentations into powerful tools for communication and engagement, leaving a lasting impression on your audience.</p>
             
            </div>
          </div>
        </div>
        
       
    </section>

  </main>
</Layout>

<style>
  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-fade-in-delayed {
    animation: fadeIn 1s ease-out 0.5s both;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>