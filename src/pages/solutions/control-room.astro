---
import Layout from '../../layouts/Layout.astro';

// SEO-optimized title and description
const title = "Control Room Display Solutions | LED Video Walls & Monitoring Systems | Lovosis";
const description = "Professional control room solutions with advanced LED video walls and monitoring displays for security, utility, and traffic management operations.";

// Schema markup - optimized for better performance
const sd = {
  "@context": "https://schema.org",
  "@type": "Product",
  "name": "Lovosis Control Room Solutions",
  "description": "Professional monitoring systems using advanced display technology for command centers",
  "brand": {
    "@type": "Brand",
    "name": "Lovosis Display"
  },
  "category": "Professional Display Systems",
  "image": "/images/solutions/control-room-hero.webp"
}

// Testimonials data
const testimonials = [
  {
    quote: "Lovosis display systems revolutionized our control room operations, providing crystal clear visuals and seamless integration.",
    author: "Michael Chen",
    position: "Operations Director",
    company: "Metro Security Systems"
  },
  {
    quote: "The clarity and reliability of Lovosis LED walls have been critical to our 24/7 monitoring capabilities.",
    author: "Sarah Johnson",
    position: "Technical Lead",
    company: "Urban Traffic Management"
  }
];

// Statistics data
const stats = [
  { value: "99.9%", label: "Uptime" },
  { value: "60%", label: "Energy Savings" },
  { value: "4K+", label: "Resolution" },
  { value: "24/7", label: "Operation" }
];
---

<Layout title={title} description={description} sd={sd}>
  <main class="overflow-hidden bg-white">
    <!-- Hero Section with Image Background -->
    <section class="relative h-[80vh] flex items-center justify-center overflow-hidden">
      <!-- Background Image with Overlay -->
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/70 to-purple-600/70"></div>
        <img 
          src="/images/solutions/control-room-hero.webp" 
          alt="Control Room Command Center"
          class="w-full h-full object-cover"
          width="1920"
          height="1080"
          fetchpriority="high"
        />
      </div>
      
      <!-- Hero Content -->
      <div class="relative z-10 container mx-auto px-4 text-center">
        <div class="max-w-4xl mx-auto backdrop-blur-sm bg-white/20 p-8 md:p-12 rounded-3xl border border-white/30 shadow-xl">
          <span class="inline-block px-3 py-1 bg-blue-50 text-blue-600 rounded-full text-sm font-medium tracking-wide mb-6">NEXT-GENERATION VISUALIZATION</span>
          
          <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-white animate-fade-in-up bg-clip-text text-transparent bg-gradient-to-r from-white via-blue-100 to-white">
            Command Center <br class="hidden md:block" />Display Solutions
          </h1>
          
          <p class="text-lg md:text-xl lg:text-2xl mb-8 md:mb-10 text-gray-200 animate-fade-in-up opacity-90" style="animation-delay: 200ms">
            Empower your operations with intelligent visualization systems designed for critical decision-making environments
          </p>
          
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in-up" style="animation-delay: 400ms">
          
            <a href="#request-demo" class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 text-white rounded-full hover:bg-white/20 transition-colors">
              Request Demo
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
            </a>
          </div>
        </div>
        
        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
          
        </div>
      </div>
    </section>

    <!-- Key Stats Section - White Background -->
    <section class="py-12 bg-white">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-0">
          {stats.map(stat => (
            <div class="p-4 text-center border-l border-gray-200 first:border-0">
              <div class="text-3xl md:text-4xl lg:text-5xl font-bold text-blue-600 mb-2">{stat.value}</div>
              <div class="text-sm uppercase tracking-wider text-gray-500">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features Grid - Enhanced - White Background -->
    <section class="py-20 md:py-28 bg-white relative">
      <!-- Subtle Background Elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none opacity-5">
        <div class="absolute -top-[10%] -right-[10%] w-[40%] h-[40%] bg-blue-700 rounded-full mix-blend-multiply filter blur-[120px]"></div>
        <div class="absolute -bottom-[10%] -left-[10%] w-[40%] h-[40%] bg-purple-700 rounded-full mix-blend-multiply filter blur-[120px]"></div>
        <div class="absolute top-1/3 left-[20%] w-[30%] h-[30%] bg-cyan-700 rounded-full mix-blend-multiply filter blur-[120px]"></div>
      </div>
      
      <div class="container mx-auto px-4 relative">
        <!-- Section Header -->
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-3 py-1 bg-indigo-100 text-indigo-600 rounded-full text-sm font-medium tracking-wide mb-4">KEY CAPABILITIES</span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 mb-6">Advanced Features for Critical Operations</h2>
          <p class="text-gray-600 text-lg">Our control room solutions come with powerful features designed for maximum efficiency, security, and operational insight.</p>
        </div>
        
        <!-- Features Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          {[
            {
              title: "Real-time Monitoring",
              desc: "Advanced visualization systems deliver live data with minimal latency, ensuring immediate awareness of critical situations.",
              color: "blue",
              icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
            },
            {
              title: "Quick Response",
              desc: "Integrated alert systems and action protocols enable immediate responses to emerging situations and events.",
              color: "purple",
              icon: "M13 10V3L4 14h7v7l9-11h-7z"
            },
            {
              title: "Enhanced Security",
              desc: "Multi-layered security protocols protect data integrity and system operations in high-stakes environments.",
              color: "green",
              icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
            },
            {
              title: "Data Analytics",
              desc: "Powerful analytics tools transform raw data into actionable intelligence for informed decision making.",
              color: "cyan",
              icon: "M9 17v-2m3 2v-4m3 4v-6m2 10H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            }
          ].map(feature => (
            <div class={`group bg-white rounded-2xl p-8 border border-gray-200 shadow-sm hover:border-${feature.color}-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-${feature.color}-500/10 hover:translate-y-[-4px]`}>
              <div class={`w-14 h-14 bg-${feature.color}-100 rounded-xl flex items-center justify-center mb-6 group-hover:bg-${feature.color}-200 transition-colors duration-300`}>
                <svg class={`w-7 h-7 text-${feature.color}-600 group-hover:text-${feature.color}-700 transition-colors duration-300`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}/>
                </svg>
              </div>
              <h3 class={`text-xl font-bold text-gray-800 mb-3 group-hover:text-${feature.color}-700 transition-colors duration-300`}>{feature.title}</h3>
              <p class="text-gray-600">{feature.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Solutions Showcase - Interactive Gallery - White Background -->
    <section id="solutions" class="py-20 md:py-28 bg-white relative">
      <!-- Decorative Elements -->
      <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-blue-300/50 to-transparent"></div>
      
      <div class="container mx-auto px-4">
        <!-- Section Header -->
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-sm font-medium tracking-wide mb-4">COMPREHENSIVE SOLUTIONS</span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 mb-6">Tailored Display Solutions</h2>
          <p class="text-gray-600 text-lg">Discover our specialized display technologies designed for different control room environments and operational needs.</p>
        </div>
        
        <!-- Solutions Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {[
            {
              title: "Command Center Display Walls",
              desc: "Ultra-high resolution LED display walls with perfect color uniformity and seamless panel integration. Create expansive visualization surfaces with up to 8K resolution for comprehensive situational awareness.",
              img: "/Control/img2.jpg",
              alt: "Command Center Display Wall",
              features: ["Bezel-free design", "24/7 operation capability", "4K to 8K resolution", "HDR support"],
              color: "blue"
            },
            {
              title: "Integrated Control Systems",
              desc: "Unified control interfaces with multi-source input management and intelligent layout control. Our systems seamlessly integrate with existing infrastructure to provide centralized command over all visual information.",
              img: "/Control/img3.jpg",
              alt: "Integrated Control System Interface",
              features: ["Multi-source management", "Remote operation", "Custom layout templates", "AI-assisted monitoring"],
              color: "purple"
            }
          ].map(solution => (
            <div class={`group relative overflow-hidden rounded-3xl bg-white border border-gray-200 shadow-md hover:border-${solution.color}-500/30 hover:shadow-lg transition-all duration-500`}>
              <div class="flex flex-col lg:flex-row h-full">
                <!-- Image Section -->
                <div class="lg:w-1/2 overflow-hidden">
                  <img 
                    src={solution.img}
                    alt={solution.alt}
                    class="w-full h-64 lg:h-full object-contain transform group-hover:scale-105 transition-transform duration-700 ease-out"
                    width="800"
                    height="600"
                    loading="lazy"
                  />
                </div>
                
                <!-- Content Section -->
                <div class="lg:w-1/2 p-8 flex flex-col justify-between">
                  <div>
                    <h3 class={`text-2xl font-bold text-gray-800 mb-4 group-hover:text-${solution.color}-600 transition-colors`}>{solution.title}</h3>
                    <p class="text-gray-600 mb-6">{solution.desc}</p>
                    
                    <!-- Features List -->
                    <div class="mb-8">
                      <h4 class="text-sm uppercase tracking-wider text-gray-500 mb-3">Key Features</h4>
                      <ul class="space-y-2">
                        {solution.features.map(feature => (
                          <li class="flex items-center text-gray-600">
                            <svg class={`w-5 h-5 mr-2 text-${solution.color}-500`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {feature}
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                  
                 
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Case Study / Testimonials Section - White Background -->
    <section class="py-20 md:py-28 bg-white relative">
      <!-- Subtle Background Elements -->
      <div class="absolute right-0 top-0 h-full w-1/3 bg-gradient-to-l from-blue-100/30 to-transparent opacity-50"></div>
      <div class="absolute left-0 bottom-0 h-1/2 w-1/4 bg-gradient-to-r from-purple-100/30 to-transparent opacity-50"></div>
      
      <div class="container mx-auto px-4 relative">
        <!-- Section Header -->
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-3 py-1 bg-green-100 text-green-600 rounded-full text-sm font-medium tracking-wide mb-4">SUCCESS STORIES</span>
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-800 mb-6">Trusted by Industry Leaders</h2>
          <p class="text-gray-600 text-lg">See how our control room solutions are empowering organizations worldwide.</p>
        </div>
        
        <!-- Testimonials -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
          {testimonials.map(testimonial => (
            <div class="bg-white rounded-2xl p-8 border border-gray-200 shadow-sm hover:border-green-500/30 hover:shadow-lg transition-all duration-300">
              <svg class="w-10 h-10 text-green-500/60 mb-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
              </svg>
              <blockquote class="text-gray-700 text-lg font-light italic mb-6">{testimonial.quote}</blockquote>
              <div class="flex items-center">
               
                <div>
                  <div class="text-gray-800 font-medium">{testimonial.author}</div>
                  <div class="text-gray-500 text-sm">{testimonial.position}, {testimonial.company}</div>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        <!-- CTA Button -->
        <div class="text-center">
          <a href="/case-studies" class="inline-flex items-center gap-2 px-6 py-3 bg-blue-50 text-blue-600 hover:bg-blue-100 rounded-lg transition-colors">
            View All Case Studies
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Banner - Light Blue Background -->
    <section class="py-16 md:py-20 bg-blue-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-800 mb-6">Ready to Transform Your Control Room?</h2>
        <p class="text-lg md:text-xl mb-10 max-w-2xl mx-auto text-gray-600">
          Download our catalog or schedule a consultation to learn how our solutions can enhance your operations.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a 
            href="/catalogs/control-room-solutions.pdf" 
            class="inline-flex items-center px-6 py-3 md:px-8 md:py-4 bg-white text-blue-600 border border-blue-200 rounded-full font-medium hover:bg-gray-50 hover:border-blue-300 transition-colors shadow-sm"
            download
            aria-label="Download control room solutions catalog PDF"
          >
            <svg class="w-5 h-5 md:w-6 md:h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
            Download Catalog
          </a>
          <a 
            href="/company/contact-us" 
            class="inline-flex items-center px-6 py-3 md:px-8 md:py-4 bg-blue-600 text-white rounded-full font-medium hover:bg-blue-700 transition-colors shadow-sm"
            aria-label="Contact our sales team"
          >
            <svg class="w-5 h-5 md:w-6 md:h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            Contact Our Team
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeInUp {
    from { 
      opacity: 0;
      transform: translateY(20px);
    }
    to { 
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>