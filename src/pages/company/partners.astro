---
import Layout from '../../layouts/Layout.astro';
// SEO Optimized Title and Description
const title = "Display Technology Partners | LED & LCD Manufacturers | Lovosis Display"
const description = "Explore Lovosis Display's strategic partnerships with leading LED display, LCD screen, educational board, and digital billboard manufacturers. Our global network ensures cutting-edge display technology solutions."

// Schema Markup for Partners Page
const sd = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "name": "Lovosis Display Technology Partners",
  "description": "Strategic partnerships with leading display technology manufacturers and solution providers",
  "mainEntity": {
    "@type": "Organization",
    "name": "Lovosis Display",
    "url": "https://unv-ledmodules.com",
    "knowsAbout": ["LED Displays", "LCD Screens", "Educational Display Boards", "Digital Billboards"],
    "member": [
      {
        "@type": "OrganizationRole",
        "member": {
          "@type": "Organization",
          "name": "Samsung Display",
          "description": "Premium LED and LCD display panel manufacturer"
        },
        "roleName": "Premium Display Partner"
      },
      {
        "@type": "OrganizationRole",
        "member": {
          "@type": "Organization",
          "name": "LG Commercial Display",
          "description": "Professional display solutions provider"
        },
        "roleName": "Premium Display Partner"
      },
      {
        "@type": "OrganizationRole",
        "member": {
          "@type": "Organization",
          "name": "NovaStar",
          "description": "LED display controller technology"
        },
        "roleName": "Certified Technology Partner"
      }
    ]
  }
}

const partners = {
  premium: [
    { 
      name: 'Samsung Display', 
      logo: '/partners/img2.png',
      description: 'Leading manufacturer of premium LED and LCD display panels',
      specialty: 'Commercial Display Solutions'
    },
    { 
      name: 'LG Commercial', 
      logo: '/partners/img3.svg',
      description: 'Professional display solutions for enterprise and commercial applications',
      specialty: 'Professional Monitors & Digital Signage'
    },
    { 
      name: 'Sony Professional', 
      logo: '/partners/img4.png',
      description: 'High-end display technologies for critical viewing environments',
      specialty: 'Broadcast & Cinema Displays'
    },
  ],
  certified: [
    { 
      name: 'Digitallink Technology LLC.', 
      logo: '/partners/logo1.png',
      description: '',
      specialty: 'Digital Marketing & Advertising'
    },
    { 
      name: 'Bond Sign', 
      logo: '/partners/logo2.png',
      description: '',
      specialty: 'Metal Fabrication & Welding'
    },
    { 
      name: 'Digiimpact', 
      logo: '/partners/logo3.webp',
      description: '',
      specialty: 'Robotics & Automation'
    },
  ]
};

const stats = [
  { number: '150+', label: 'Global Partners' },
  { number: '45', label: 'Countries' },
  { number: '24/7', label: 'Support' },
  { number: '98%', label: 'Satisfaction Rate' }
];
---

<Layout title={title} description={description} sd={sd}>
  <main class="bg-white overflow-hidden">
    <!-- Hero Section -->
    <section class="relative bg-white py-20 lg:py-32 overflow-hidden">
      <!-- Background Elements -->
      <div class="absolute top-0 right-0 -mr-40 -mt-40 lg:mr-0 lg:mt-0">
        <div class="w-96 h-96 bg-blue-50 rounded-full mix-blend-multiply filter blur-3xl opacity-70"></div>
      </div>
      <div class="absolute bottom-0 left-0 -mb-40 -ml-40 lg:mb-0 lg:ml-0">
        <div class="w-96 h-96 bg-purple-50 rounded-full mix-blend-multiply filter blur-3xl opacity-70"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="flex flex-col-reverse lg:flex-row items-center">
          <div class="lg:w-1/2 pt-10 lg:pt-0 lg:pr-16">
            <div class="inline-block px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-sm font-semibold mb-6">
              STRATEGIC ALLIANCES
            </div>
            <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
              Our Trusted <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600">Technology Partners</span>
            </h1>
            <p class="text-lg text-gray-600 mb-8 leading-relaxed">
              We've established strategic partnerships with the world's leading display manufacturers to provide our clients with cutting-edge technology, exclusive distribution rights, and premium support services.
            </p>
            
            <div class="flex flex-wrap gap-4">
              {stats.map(stat => (
                <div class="bg-white shadow-sm border border-gray-100 rounded-xl px-6 py-4 text-center min-w-[120px]">
                  <div class="text-3xl font-bold text-blue-600 mb-1">{stat.number}</div>
                  <div class="text-sm text-gray-500">{stat.label}</div>
                </div>
              ))}
            </div>
          </div>
          
          <div class="lg:w-1/2 mb-10 lg:mb-0">
            <div class="relative">
              <div class="absolute -left-6 -top-6 w-24 h-24 bg-purple-100 rounded-full"></div>
              <div class="absolute -right-6 -bottom-6 w-32 h-32 bg-blue-100 rounded-full"></div>
              
              <div class="relative z-10 bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100">
                <img 
                  src="/partners/img1.jpg"
                  alt="Lovosis Display Partnership Network"
                  class="w-full h-auto object-cover"
                  width="600"
                  height="400"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Partnership Tiers Introduction -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto text-center mb-16">
          <span class="inline-block px-3 py-1 bg-purple-100 text-purple-600 rounded-full text-sm font-semibold mb-4">
            PARTNERSHIP ECOSYSTEM
          </span>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">
            Official Display Technology Partnerships
          </h2>
          <p class="text-lg text-gray-600">
            Our multi-tiered partnership program ensures we can provide the right display solution for any project, with full manufacturer warranty and official support channels.
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white rounded-2xl p-8 shadow-lg border-t-4 border-blue-500 hover:shadow-xl transition-shadow">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-50 text-blue-500 mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Premium Partners</h3>
            <p class="text-gray-600 mb-6">
              Direct relationships with top-tier display manufacturers, allowing us to offer exclusive products, extended warranties, and priority technical support.
            </p>
            <ul class="space-y-2 mb-6">
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Direct manufacturer support channels
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Access to pre-release technology
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-blue-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Extended warranty options
              </li>
            </ul>
          </div>
          
          <div class="bg-white rounded-2xl p-8 shadow-lg border-t-4 border-purple-500 hover:shadow-xl transition-shadow">
            <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-purple-50 text-purple-500 mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Certified Partners</h3>
            <p class="text-gray-600 mb-6">
              Collaborations with certified technology providers to ensure our clients receive the highest quality products and services, backed by official certification and support.
            </p>
            <ul class="space-y-2 mb-6">
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Certified technology solutions
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Comprehensive support services
              </li>
              <li class="flex items-center text-gray-600">
                <svg class="w-5 h-5 mr-2 text-purple-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Industry-leading expertise
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Premium Partners -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Premium Partners</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto"></div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {partners.premium.map(partner => (
            <div class="group bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500 transform hover:-translate-y-1">
              <div class="h-32 flex items-center justify-center mb-6">
                <img src={partner.logo} alt={partner.name} class="max-h-full max-w-[80%] object-contain filter grayscale group-hover:grayscale-0 transition-all duration-500" />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 text-center">{partner.name}</h3>
              <p class="text-gray-600 text-center mt-4">{partner.description}</p>
              <p class="text-sm text-gray-500 text-center mt-2">{partner.specialty}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Certified Partners -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Certified Partners</h2>
          <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto"></div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {partners.certified.map(partner => (
            <div class="group bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-500">
              <div class="h-32 flex items-center justify-center mb-6">
                <img src={partner.logo} alt={partner.name} class="max-h-full max-w-[80%] object-contain filter grayscale group-hover:grayscale-0 transition-all duration-500" />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 text-center">{partner.name}</h3>
              <p class="text-gray-600 text-center mt-4">{partner.description}</p>
              <p class="text-sm text-gray-500 text-center mt-2">{partner.specialty}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>