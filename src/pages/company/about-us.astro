---
import Layout from '../../layouts/Layout.astro';

// SEO Optimization
const title = 'About UNV Display | Leading LED & LCD Display Solutions Provider';
const description = 'UNV Display is a global provider of premium LED displays, LCD screens, interactive educational boards & digital billboards. Discover our innovative technology, company values & commitment to quality display solutions.';

// Organization Schema Markup for About Page
const sd = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "Organization",
    "name": "UNV  Display",
    "description": "Global provider of AIoT display products and solutions, specializing in LED displays, LCD screens, educational boards, and digital billboards",
    "url": "https://UNV Display.com",
    "logo": "https://UNV Display.com/images/logo.png",
    "foundingDate": "2010",
    "founder": {
      "@type": "Person",
      "name": "UNV  Display Founder"
    },
    "numberOfEmployees": {
      "@type": "QuantitativeValue",
      "value": "500+"
    },
    "award": [
      "Innovation Excellence in Display Technology",
      "Top LED Display Provider"
    ],
    "hasCredential": [
      "ISO14000 Certification",
      "RoHS Compliance"
    ],
    "sameAs": [
      "https://www.facebook.com/UNV display",
      "https://twitter.com/UNV display",
      "https://www.linkedin.com/company/UNV -display"
    ]
  }
}

const stats = [
  { number: '3000+', label: 'patents applied' },
  { number: '10%', label: 'annual revenue invested in R&D' },
  { number: 'NO.1', label: 'per capita innovation ability' },
  { number: '80%', label: 'invention patent ratio' },
  { number: '6', label: 'R&D Centers' }
];

const products = [
  { id: '01', name: 'IWB' },
  { id: '02', name: 'LED Displays' },
  { id: '03', name: 'LCD Video Wall' },
  { id: '04', name: 'Controller' },
  { id: '05', name: 'Monitor' }
];

const features = [
  'Eye Care Mode',
  'Fast Response',
  'HDR 10',
  'Pixel & Color Correction'
];

const values = [
  {
    title: 'Innovative & Pragmatic',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>`
  },
  {
    title: 'Collaborative & Win-win',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  },
  {
    title: 'Simple & Equal',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
    </svg>`
  },
  {
    title: 'To Continuously Improve',
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`
  }
];

const images = {
  hero: "https://img.freepik.com/free-photo/modern-business-building-with-glass-wall-from-empty-floor_1127-2411.jpg",
  vision: "https://img.freepik.com/free-photo/business-vision-mission-strategy-branding-concept_53876-167079.jpg",
  mission: "https://img.freepik.com/free-photo/business-planning-strategy-development-icons-concept_53876-144425.jpg",
  products: {
    iwb: "https://img.freepik.com/free-photo/interactive-whiteboard-modern-classroom_157027-1122.jpg",
    led: "https://img.freepik.com/free-photo/led-wall-display-panel_107791-1863.jpg",
    lcd: "https://img.freepik.com/free-photo/video-wall-display-panels_157027-189.jpg",
    controller: "https://img.freepik.com/free-photo/digital-control-panel-interface_157027-1659.jpg",
    monitor: "https://img.freepik.com/free-photo/professional-monitor-display_157027-1432.jpg"
  },
  responsibility: {
    environmental: "https://img.freepik.com/free-photo/environmental-conservation-nature-concept_53876-124861.jpg",
    certification: "https://img.freepik.com/free-photo/iso-certification-quality-standard-concept_53876-124595.jpg",
    community: "https://img.freepik.com/free-photo/group-diverse-people-volunteering-community-service_53876-138067.jpg"
  },
  values: [
    "https://img.freepik.com/free-photo/business-team-discussing-ideas-startup_1421-55.jpg",
    "https://img.freepik.com/free-photo/corporate-environmental-responsibility_53876-94536.jpg"
  ],
  technology: {
    eyeCare: "https://img.freepik.com/free-photo/eye-protection-screen-technology_157027-1832.jpg",
    fastResponse: "https://img.freepik.com/free-photo/fast-performance-speed-technology_157027-1877.jpg",
    hdr: "https://img.freepik.com/free-photo/hdr-display-technology-concept_157027-1654.jpg",
    pixelCorrection: "https://img.freepik.com/free-photo/digital-screen-pixel-correction_157027-1789.jpg"
  }
};
---

<Layout title={title} description={description} sd={sd}>
  <main class="overflow-hidden">
    <!-- Hero Section -->
    <section class="relative h-[90vh] overflow-hidden">
      {/* Background Image with Overlay */}
      <div class="absolute inset-0">
        <img 
          src={images.hero}
          alt="UNV Headquarters"
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-r from-gray-900/90 to-gray-800/75"></div>
      </div>
    
      {/* Content */}
      <div class="relative h-full container mx-auto px-4 flex flex-col justify-center">
        <div class="max-w-3xl space-y-6">
          <h1 class="text-6xl font-bold text-white leading-tight">
            About <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">UNV</span>
          </h1>
          <p class="text-xl text-gray-200 leading-relaxed">
            LT is a global provider of AIoT products and solutions, evolving from video technology to AIoT and expanding its product line to include display and control solutions.
          </p>
          <div class="w-20 h-1 bg-gradient-to-r from-blue-500 to-purple-500"></div>
        </div>
    
        {/* Floating Cards */}
        <div class="absolute bottom-16 right-0 flex space-x-6">
          <div class="bg-white/10 backdrop-blur-lg rounded-xl p-6 transform hover:-translate-y-2 transition-all duration-300">
            <svg class="w-8 h-8 text-blue-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
            <h3 class="text-lg font-semibold text-white">Innovation</h3>
          </div>
          <div class="bg-white/10 backdrop-blur-lg rounded-xl p-6 transform hover:-translate-y-2 transition-all duration-300">
            <svg class="w-8 h-8 text-purple-400 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <h3 class="text-lg font-semibold text-white">Global Reach</h3>
          </div>
        </div>
      </div>
    
      {/* Animated Shapes */}
      <div class="absolute -top-24 -right-24 w-96 h-96 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-full blur-3xl"></div>
      <div class="absolute -bottom-24 -left-24 w-96 h-96 bg-gradient-to-br from-purple-500/20 to-blue-500/20 rounded-full blur-3xl"></div>
    </section>

    <!-- Vision, Mission & Values Section -->
    
    <section class="relative py-24 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-gray-100"></div>
        <div class="container mx-auto px-4 relative">
          <!-- Vision & Mission -->
          <div class="grid lg:grid-cols-2 gap-12 mb-16">
            <div class="group relative">
              <div class="bg-white rounded-2xl p-10 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
                <div class="absolute -top-4 -left-4 w-24 h-24 bg-gradient-to-br from-blue-600 to-purple-600 rounded-xl opacity-10"></div>
                <svg class="w-12 h-12 text-blue-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Vision</h2>
                <p class="text-xl text-gray-600 font-medium mb-6">Unlimited New View</p>
                <div class="w-20 h-1 bg-gradient-to-r from-blue-600 to-purple-600"></div>
              </div>
            </div>
      
            <div class="group relative">
              <div class="bg-white rounded-2xl p-10 shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-1">
                <div class="absolute -top-4 -right-4 w-24 h-24 bg-gradient-to-br from-purple-600 to-blue-600 rounded-xl opacity-10"></div>
                <svg class="w-12 h-12 text-purple-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21l-7-5-7 5V5a2 2 0 012-2h10a2 2 0 012 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <h2 class="text-3xl font-bold text-gray-900 mb-4">Mission</h2>
                <p class="text-lg text-gray-600 leading-relaxed">
                  LT, consider ourselves as a citizen of the world, endeavors to build a safer world based on professionalism and reliability, move forward with fortitude, so as to achieve innovation, prosperity and continuous progress.
                </p>
              </div>
            </div>
          </div>
      
          <!-- Values -->
          <div class="relative bg-white rounded-2xl p-10 shadow-xl">
            <div class="text-center mb-12">
              <h2 class="text-3xl font-bold text-gray-900 mb-4">Social Responsibility</h2>
              <div class="w-24 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto"></div>
            </div>
          
            <div class="grid md:grid-cols-3 gap-8">
              {/* Environmental Protection */}
              <div class="group relative overflow-hidden rounded-xl">
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-8 h-full transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl">
                  <svg class="w-12 h-12 text-green-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <h3 class="text-xl font-semibold text-gray-900 mb-4">Environmental Protection</h3>
                  <p class="text-gray-600">UNV has a strong awareness of protecting the environment.</p>
                </div>
              </div>
          
              {/* Certifications */}
              <div class="group relative overflow-hidden rounded-xl">
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-8 h-full transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl">
                  <svg class="w-12 h-12 text-blue-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                  <h3 class="text-xl font-semibold text-gray-900 mb-4">ISO14000 & RoHS Certified</h3>
                  <p class="text-gray-600">UNV is certified ISO14000 and RoHS. We insist on being eco-friendly during production and working.</p>
                </div>
              </div>
          
              {/* Community Care */}
              <div class="group relative overflow-hidden rounded-xl">
                <div class="bg-gradient-to-br from-gray-50 to-gray-100 p-8 h-full transform hover:-translate-y-1 transition-all duration-300 hover:shadow-xl">
                  <svg class="w-12 h-12 text-purple-600 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                  <h3 class="text-xl font-semibold text-gray-900 mb-4">Community Care</h3>
                  <p class="text-gray-600">UNV also cares about people and society. We think that we have the social responsibility to help others. UNV has volunteer teams which hold many charitable activities to help vulnerable groups.</p>
                </div>
              </div>
            </div>
          
            <div class="mt-12">
              <div class="grid grid-cols-2 gap-8">
                <img 
                  src={images.responsibility.environmental} 
                  alt="Environmental Initiatives"
                  class="w-full h-64 object-cover rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300"
                />
                <img 
                  src={images.responsibility.community} 
                  alt="Community Service"
                  class="w-full h-64 object-cover rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300"
                />
              </div>
            </div>
          </div>
        </div>
      
        <!-- Decorative Elements -->
        <div class="absolute top-0 right-0 w-64 h-64 bg-gradient-to-br from-blue-600/5 to-purple-600/5 rounded-full -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-64 h-64 bg-gradient-to-br from-purple-600/5 to-blue-600/5 rounded-full translate-y-1/2 -translate-x-1/2"></div>
      </section>


















    
    <!-- Products Grid -->
    <section class="py-24 bg-gradient-to-br from-gray-50 to-gray-100">
        <div class="container mx-auto px-4">
          <div class="text-center max-w-3xl mx-auto mb-16">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">UNV Display Products</h2>
            <div class="w-20 h-1 bg-gradient-to-r from-blue-600 to-purple-600 mx-auto mb-6"></div>
            <p class="text-gray-600 text-lg">Experience our comprehensive range of professional display solutions</p>
          </div>
      
          <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-5 gap-8">
            {products.map((product, index) => (
              <div class="group relative overflow-hidden rounded-2xl bg-white hover:bg-gradient-to-br hover:from-blue-50 hover:to-purple-50 transition-all duration-500 shadow-md hover:shadow-xl transform hover:-translate-y-1">
                <div class="p-8">
                  {/* Product Icon */}
                  <div class="mb-6 relative z-10">
                    <svg 
                      class="w-12 h-12 text-blue-600 group-hover:text-purple-600 transition-colors duration-300" 
                      fill="none" 
                      stroke="currentColor" 
                      viewBox="0 0 24 24"
                    >
                      {index === 0 && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      )}
                      {index === 1 && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      )}
                      {index === 2 && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      )}
                      {index === 3 && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                      )}
                      {index === 4 && (
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      )}
                    </svg>
                  </div>
      
                  {/* Product Number */}
                  <span class="absolute -top-6 -left-6 text-8xl font-bold text-gray-900/5 group-hover:text-blue-600/5 transition-colors duration-500">
                    {product.id}
                  </span>
      
                  {/* Product Name */}
                  <h3 class="text-xl font-bold text-gray-900 mb-4 relative z-10 group-hover:text-blue-600 transition-colors duration-300">
                    {product.name}
                  </h3>
      
                  {/* Hover Line */}
                  <div class="w-10 h-1 bg-gradient-to-r from-blue-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                </div>
      
                {/* Decorative Corner */}
                <div class="absolute -bottom-6 -right-6 w-12 h-12 bg-gradient-to-br from-blue-600 to-purple-600 opacity-0 group-hover:opacity-10 rounded-full transition-opacity duration-500"></div>
              </div>
            ))}
          </div>
        </div>
      </section>







    



    <!-- Technology Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Technology Features</h2>
        <div class="grid md:grid-cols-4 gap-8">
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">Eye Care Mode</h3>
            <img src={images.technology.eyeCare} alt="Eye Care Mode" class="w-full h-48 object-cover rounded-lg mb-4" />
            <p class="text-gray-600">Protect your eyes with our advanced eye care mode.</p>
          </div>
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">Fast Response</h3>
            <img src={images.technology.fastResponse} alt="Fast Response" class="w-full h-48 object-cover rounded-lg mb-4" />
            <p class="text-gray-600">Experience ultra-fast response times for seamless performance.</p>
          </div>
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">HDR 10</h3>
            <img src={images.technology.hdr} alt="HDR 10" class="w-full h-48 object-cover rounded-lg mb-4" />
            <p class="text-gray-600">Enjoy stunning visuals with HDR 10 technology.</p>
          </div>
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">Pixel & Color Correction</h3>
            <img src={images.technology.pixelCorrection} alt="Pixel & Color Correction" class="w-full h-48 object-cover rounded-lg mb-4" />
            <p class="text-gray-600">Achieve perfect pixel and color correction for accurate display.</p>
          </div>
        </div>
      </div>
    </section>

   

    <!-- Social Responsibility -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Social Responsibility</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">Environmental Protection</h3>
            <p class="text-gray-600">UNV has a strong awareness of protecting the environment.</p>
          </div>
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">Certifications</h3>
            <p class="text-gray-600">UNV is certified ISO14000 and RoHS, insisting on eco-friendly production.</p>
          </div>
          <div class="bg-gray-50 p-8 rounded-xl">
            <h3 class="text-xl font-semibold mb-4">Community Care</h3>
            <p class="text-gray-600">Our volunteer teams hold charitable activities to help vulnerable groups.</p>
          </div>
        </div>
      </div>
    </section>

        <!-- Stats Section -->
        <section class="py-20 bg-blue-600 text-white">
            <div class="container mx-auto px-4">
              <h2 class="text-3xl font-bold text-center mb-12">Innovation Statistics</h2>
              <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
                {stats.map(stat => (
                  <div class="text-center">
                    <span class="block text-4xl font-bold mb-2">{stat.number}</span>
                    <span class="text-blue-100">{stat.label}</span>
                  </div>
                ))}
              </div>
            </div>
          </section>
  </main>
</Layout>