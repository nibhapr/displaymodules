---
import Layout from "../../layouts/Layout.astro";

// SEO Optimized Title and Description
const title =
  "Contact Lovosis Display | LED & LCD Display Solutions | Request a Quote";
const description =
  "Contact Lovosis Display for premium LED displays, LCD screens, educational boards and digital billboards. Get expert consultation, technical support, and customized display solutions for your business needs.";

// Schema Markup for Contact Page
const sd = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  name: "Contact Lovosis Display",
  description:
    "Get in touch with Lovosis Display for LED displays, LCD screens, educational boards and digital billboard solutions",
  mainEntity: {
    "@type": "Organization",
    name: "Lovosis Display",
    url: "https://unv-ledmodules.com",
    logo: "https://unv-ledmodules.com/images/logo.png",
    contactPoint: [
      {
        "@type": "ContactPoint",
        telephone: "+91 22 1234 5678",
        contactType: "customer service",
        areaServed: "Mumbai",
        availableLanguage: ["English", "Hindi"],
      },
      {
        "@type": "ContactPoint",
        telephone: "+91 11 8765 4321",
        contactType: "sales",
        areaServed: "Delhi",
        availableLanguage: ["English", "Hindi"],
      },
    ],
  },
};

const images = {
  hero: "https://img.freepik.com/free-photo/modern-business-center-with-glass-walls_1127-2880.jpg",
  pattern:
    "https://img.freepik.com/free-vector/abstract-pattern-design_1273-159.jpg",
};

const officeLocations = [
  {
    city: "Dubai",
    address: "Baghlaf Building Shop No.11 Satellite Market",
    phone: "+971 55 2929644 ",
    email: "sales@unv-ledmodules.com",
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
    </svg>`,
  },
];
---

<Layout title={title} description={description} sd={sd}>
  <!-- Email.js Script -->
  <script
    src="https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js"
  ></script>

  <main class="min-h-screen">
    {/* Hero Section */}
    <section class="relative h-[60vh] overflow-hidden">
      {/* Background Image */}
      <div class="absolute inset-0">
        <img
          src={images.hero}
          alt="Contact Us Header"
          class="w-full h-full object-cover"
        />
        <div
          class="absolute inset-0 bg-gradient-to-r from-gray-900/95 via-gray-900/90 to-gray-900/75"
        >
        </div>

        {/* Pattern Overlay */}
        <div class="absolute inset-0 opacity-5 mix-blend-overlay">
          <img src={images.pattern} alt="" class="w-full h-full object-cover" />
        </div>
      </div>

      {/* Content */}
      <div class="relative h-full container mx-auto px-4">
        <div
          class="h-full flex flex-col justify-center items-center text-center"
        >
          <h1 class="text-5xl md:text-6xl font-bold text-white mb-6">
            Get in <span
              class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400"
              >Touch</span
            >
          </h1>
          <p class="text-xl text-gray-300 max-w-2xl">
            Have questions? We're here to help. Contact our team for support or
            business inquiries.
          </p>

          {/* Decorative Line */}
          <div
            class="mt-8 w-24 h-1 bg-gradient-to-r from-blue-500 to-purple-500"
          >
          </div>
        </div>
      </div>

      {/* Animated Blobs */}
      <div
        class="absolute -top-24 -right-24 w-96 h-96 bg-gradient-to-br from-blue-500/20 to-purple-500/20 rounded-full blur-3xl animate-blob"
      >
      </div>
      <div
        class="absolute -bottom-24 -left-24 w-96 h-96 bg-gradient-to-br from-purple-500/20 to-blue-500/20 rounded-full blur-3xl animate-blob animation-delay-2000"
      >
      </div>
    </section>

    {/* Contact Form Section */}
    <section class="py-20">
      <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-16">
          {/* Contact Form */}
          <div
            class="bg-white rounded-2xl p-8 shadow-lg relative overflow-hidden"
          >
            {/* Decorative elements */}
            <div
              class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-blue-500 to-purple-500"
            >
            </div>
            <div
              class="absolute -top-16 -right-16 w-32 h-32 bg-purple-100 rounded-full opacity-70"
            >
            </div>
            <div
              class="absolute -bottom-16 -left-16 w-32 h-32 bg-blue-100 rounded-full opacity-70"
            >
            </div>

            <h2 class="text-3xl font-bold text-gray-900 mb-2">
              Send us a Message
            </h2>
            <p class="text-gray-600 mb-8">
              We'd love to hear from you. Fill out the form below.
            </p>

            <!-- Success message (hidden by default) -->
            <div
              id="success-message"
              class="hidden bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 mb-6"
            >
              <div class="flex">
                <svg
                  class="w-5 h-5 text-green-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd"></path>
                </svg>
                <p>
                  Your message has been sent successfully! We'll get back to you
                  soon.
                </p>
              </div>
            </div>

            <!-- Error message (hidden by default) -->
            <div
              id="error-message"
              class="hidden bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 mb-6"
            >
              <div class="flex">
                <svg
                  class="w-5 h-5 text-red-600 mr-2"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z"
                    clip-rule="evenodd"></path>
                </svg>
                <p id="error-text">
                  Something went wrong. Please try again later.
                </p>
              </div>
            </div>

            <form id="contact-form" class="space-y-6">
              <!-- Name Field -->
              <div class="form-group relative">
                <div
                  class="flex items-center px-4 py-3 bg-gray-50 rounded-lg mb-2"
                >
                  <svg
                    class="w-5 h-5 text-gray-400 mr-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                    ></path>
                  </svg>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    placeholder="Your Full Name"
                    required
                    class="w-full bg-transparent border-none focus:ring-0 text-gray-700 placeholder-gray-400 focus:outline-none"
                  />
                </div>
                <label for="name" class="text-sm font-medium text-gray-600 ml-1"
                  >Name</label
                >
              </div>

              <!-- Email Field -->
              <div class="form-group relative">
                <div
                  class="flex items-center px-4 py-3 bg-gray-50 rounded-lg mb-2"
                >
                  <svg
                    class="w-5 h-5 text-gray-400 mr-3"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                    ></path>
                  </svg>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="your.email@example.com"
                    required
                    class="w-full bg-transparent border-none focus:ring-0 text-gray-700 placeholder-gray-400 focus:outline-none"
                  />
                </div>
                <label
                  for="email"
                  class="text-sm font-medium text-gray-600 ml-1"
                  >Email Address</label
                >
              </div>

              <!-- Message Field -->
              <div class="form-group relative">
                <div class="flex px-4 py-3 bg-gray-50 rounded-lg mb-2">
                  <svg
                    class="w-5 h-5 text-gray-400 mr-3 mt-1 flex-shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                    ></path>
                  </svg>
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    placeholder="How can we help you?"
                    required
                    class="w-full bg-transparent border-none focus:ring-0 text-gray-700 placeholder-gray-400 focus:outline-none resize-none"
                  ></textarea>
                </div>
                <label
                  for="message"
                  class="text-sm font-medium text-gray-600 ml-1"
                  >Your Message</label
                >
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full relative overflow-hidden group bg-gradient-to-r from-blue-500 to-purple-600 text-white font-medium py-3 px-6 rounded-lg transition-all duration-300 transform hover:scale-[1.02] hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
              >
                <span class="relative z-10 flex items-center justify-center">
                  <svg
                    class="w-5 h-5 mr-2"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
                  </svg>
                  <span>Send Message</span>
                </span>
                <span
                  class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-yellow-400 to-pink-500 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"
                ></span>
              </button>

              <p class="text-center text-xs text-gray-500 mt-4">
                By submitting this form, you agree to our <a
                  href="#"
                  class="text-blue-600 hover:underline">Privacy Policy</a
                >.
              </p>
            </form>
          </div>

          {/* Office Locations */}
          <div class="space-y-8">
            <h2 class="text-3xl font-bold text-gray-900">Our Offices</h2>
            <div class="grid gap-8">
              {
                officeLocations.map((office) => (
                  <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow duration-300">
                    <div class="flex items-start space-x-4">
                      <div class="p-3 bg-gradient-to-br from-blue-500/10 to-purple-500/10 rounded-lg">
                        <div class="text-blue-600" set:html={office.icon} />
                      </div>
                      <div>
                        <h3 class="text-xl font-semibold text-gray-900 mb-2">
                          {office.city}
                        </h3>
                        <p class="text-gray-600 mb-4">{office.address}</p>
                        <div class="space-y-2">
                          <p class="flex items-center text-gray-600">
                            <svg
                              class="w-5 h-5 mr-2"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                              />
                            </svg>
                            {office.phone}
                          </p>
                          <p class="flex items-center text-gray-600">
                            <svg
                              class="w-5 h-5 mr-2"
                              fill="none"
                              stroke="currentColor"
                              viewBox="0 0 24 24"
                            >
                              <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                              />
                            </svg>
                            {office.email}
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                ))
              }
            </div>

            {/* Map Section */}
            <div class="bg-white rounded-xl overflow-hidden shadow-lg">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3771.1124717681275!2d72.8516624!3d19.0725451!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTnCsDA0JzM3LjYiTiA3MsKwNTEnMDguNiJF!5e0!3m2!1sen!2sin!4v1645517558744!5m2!1sen!2sin"
                width="100%"
                height="400"
                style="border:0;"
                loading="lazy"
                class="grayscale"></iframe>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    // Import EmailJS properly in a client-side script
    import emailjs from "@emailjs/browser";

    // Initialize EmailJS with your user ID
    emailjs.init("oDC32FOAXNE1_69yx"); // Replace with your actual User ID

    // Form submission handler
    const contactForm = document.getElementById("contact-form");
    if (contactForm) {
      contactForm.addEventListener("submit", function (event) {
        event.preventDefault();

        const serviceID = "service_r6afk4h"; // Replace with your EmailJS service ID
        const templateID = "template_f5wi9og"; // Replace with your EmailJS template ID

        emailjs.sendForm(serviceID, templateID, this as HTMLFormElement).then(
          (result) => {
            console.log("SUCCESS!", result.text);
            // Show success message
            document
              .getElementById("success-message")
              ?.classList.remove("hidden");
            // Reset form
            (this as HTMLFormElement).reset();
          },
          (error) => {
            console.log("FAILED...", error.text);
            // Show error message
            document
              .getElementById("error-message")
              ?.classList.remove("hidden");
            document.getElementById("error-text")!.textContent =
              "Failed to send message. Please try again later.";
          }
        );
      });
    }
  </script>
</Layout>

<style>
  @keyframes blob {
    0% {
      transform: translate(0px, 0px) scale(1);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9);
    }
    100% {
      transform: translate(0px, 0px) scale(1);
    }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  /* Form validation and feedback animations */
  @keyframes shake {
    0%,
    100% {
      transform: translateX(0);
    }
    10%,
    30%,
    50%,
    70%,
    90% {
      transform: translateX(-5px);
    }
    20%,
    40%,
    60%,
    80% {
      transform: translateX(5px);
    }
  }

  .shake {
    animation: shake 0.5s cubic-bezier(0.36, 0.07, 0.19, 0.97) both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #success-message,
  #error-message {
    animation: fadeIn 0.3s ease-out forwards;
  }

  /* Input field focus animation */
  .form-group:focus-within .bg-gray-50 {
    background-color: #eff6ff; /* Light blue background on focus */
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
  }

  /* Button hover animation */
  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.02);
    }
  }

  button[type="submit"]:hover {
    animation: pulse 2s infinite;
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
</style>
