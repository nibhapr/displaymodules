---
import Layout from '../layouts/Layout.astro';

// SEO Optimization
const title = "Privacy Policy | Lovosis Display Solutions | Official Display Distributors";
const description = "Learn how Lovosis Display Solutions, official distributors of premium digital displays, protects your privacy and handles your data with our comprehensive privacy policy.";

// Structured Data / Schema Markup
const sd = {
  "@context": "https://schema.org",
  "@type": "PrivacyPolicy",
  "name": "Lovosis Display Solutions Privacy Policy",
  "version": "1.2",
  "publishingPrinciples": "https://www.lovosisdisplay.com/terms",
  "dateModified": "2025-03-01",
  "creator": {
    "@type": "Organization",
    "name": "Lovosis Display Solutions",
    "url": "https://www.lovosisdisplay.com",
    "logo": "https://www.lovosisdisplay.com/logo.png",
    "description": "Official distributors of premium digital displays and signage solutions"
  },
  "inLanguage": "en-US",
  "audience": {
    "@type": "Audience",
    "audienceType": "Business clients and display technology customers"
  }
};

// Last updated date
const lastUpdated = "March 1, 2025";

// Privacy Policy Sections
const privacySections = [
  {
    title: "Information We Collect",
    content: "As official distributors of display technology, we collect business contact information, purchase history, product preferences, and technical requirements to provide you with the most suitable display solutions. This includes names, email addresses, phone numbers, company information, and product specifications needed for your projects.",
    icon: "M10 21h7a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v11m0 5l4.879-4.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242z"
  },
  {
    title: "How We Use Your Information",
    content: "Your information helps us provide accurate display specifications, product recommendations, and distribution logistics. We use it to process orders, arrange product demonstrations, manage warranties, coordinate installations, and provide after-sales support for all distributed display products.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    title: "Information Sharing",
    content: "As official distributors, we may share your information with our manufacturing partners for warranty registration, technical support, and product fulfillment. This ensures you receive authentic products with full manufacturer support and valid warranties for all display systems.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
  },
  {
    title: "Cookies & Tracking",
    content: "Our website uses cookies to enhance your browsing experience and provide personalized display product recommendations. These cookies help us analyze which display categories and specifications are of greatest interest to our clients and optimize our product showcase accordingly.",
    icon: "M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
  },
  {
    title: "Data Security",
    content: "We implement strong security measures to protect your information across our display distribution network. This includes encryption, secure access controls, and regular security audits to safeguard all client and product data in our distribution management systems.",
    icon: "M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
  },
  {
    title: "Your Privacy Rights",
    content: "You have the right to access, correct, or delete your personal information in our distribution database. You may also opt out of certain communications or request information about what display product data we maintain about your account and purchase history.",
    icon: "M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"
  }
];

// Contact Information
const contactInfo = {
  email: "privacy@lovosisdisplay.com",
  phone: "+1 (555) 123-4567",
  address: "2500 Display Boulevard, Suite 300, Chicago, IL 60616"
};
---

<Layout title={title} description={description} sd={sd}>
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-600 to-blue-800 py-20">
      <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="absolute top-0 -right-1/4 w-1/2 h-1/2 bg-white/20 rounded-full blur-3xl"></div>
        <div class="absolute bottom-0 -left-1/4 w-1/2 h-1/2 bg-white/10 rounded-full blur-3xl"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            Privacy Policy
          </h1>
          <p class="text-xl text-blue-100 max-w-2xl mx-auto">
            How Lovosis Display Solutions, official distributors of premium display technology, protects your information
          </p>
          <div class="mt-8 text-blue-100 text-sm">
            Last Updated: {lastUpdated}
          </div>
        </div>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="bg-blue-50 rounded-xl p-8 border border-blue-100 mb-12">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h2 class="text-xl font-semibold text-gray-900 mb-2">Privacy Policy Overview</h2>
                <p class="text-gray-600">
                  This Privacy Policy explains how Lovosis Display Solutions, as official distributors of premium display technology, collects, uses, and protects your personal information. We are committed to safeguarding the privacy of our clients while providing exceptional service in the distribution of display solutions across various industries.
                </p>
              </div>
            </div>
          </div>

          <!-- Policy Sections -->
          <div class="space-y-16">
            {privacySections.map(section => (
              <div class="flex flex-col md:flex-row md:items-start gap-8">
                <div class="md:w-16 flex-shrink-0">
                  <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={section.icon}></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h2 class="text-2xl font-bold text-gray-900 mb-4">{section.title}</h2>
                  <p class="text-lg text-gray-600 leading-relaxed">{section.content}</p>
                </div>
              </div>
            ))}

            <!-- Distribution Partners Section -->
            <div class="flex flex-col md:flex-row md:items-start gap-8">
              <div class="md:w-16 flex-shrink-0">
                <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-gray-900 mb-4">Our Distribution Partners</h2>
                <p class="text-lg text-gray-600 leading-relaxed">
                  As official distributors, we work closely with leading display manufacturers worldwide. When you purchase through us, your information may be shared with these manufacturers for warranty registration, technical support, and product fulfillment. This ensures you receive authentic products with full manufacturer backing and valid warranties.
                </p>
                <div class="mt-6 p-6 bg-gray-50 rounded-xl border border-gray-100">
                  <h3 class="text-lg font-semibold text-gray-900 mb-3">Our Display Manufacturing Partners</h3>
                  <div class="flex flex-wrap gap-6 items-center">
                    <div class="py-2 px-4 bg-white rounded-md border border-gray-200 text-sm text-gray-700">Samsung Display</div>
                    <div class="py-2 px-4 bg-white rounded-md border border-gray-200 text-sm text-gray-700">LG Commercial</div>
                    <div class="py-2 px-4 bg-white rounded-md border border-gray-200 text-sm text-gray-700">NovaStar</div>
                    <div class="py-2 px-4 bg-white rounded-md border border-gray-200 text-sm text-gray-700">Sony Professional</div>
                    <div class="py-2 px-4 bg-white rounded-md border border-gray-200 text-sm text-gray-700">Barco</div>
                    <div class="py-2 px-4 bg-white rounded-md border border-gray-200 text-sm text-gray-700">Philips Professional Display</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information -->
          <div class="mt-20 p-8 bg-gray-50 rounded-xl border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Our Privacy Team</h2>
            <p class="text-lg text-gray-600 mb-8">
              If you have questions about our privacy practices or would like to exercise your privacy rights related to our display distribution services, please contact us:
            </p>
            
            <div class="grid md:grid-cols-3 gap-6">
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-500 mb-1">Email</div>
                  <div class="text-gray-900">{contactInfo.email}</div>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-500 mb-1">Phone</div>
                  <div class="text-gray-900">{contactInfo.phone}</div>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-500 mb-1">Address</div>
                  <div class="text-gray-900">{contactInfo.address}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Digital Distribution Commitment -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-blue-100 mb-6">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Our Privacy Commitment</h2>
          <p class="text-xl text-gray-600 mb-8">
            As official distributors of premium display technology, we take our responsibility to protect your data as seriously as we take our commitment to provide authentic, high-quality display solutions.
          </p>
          <div class="inline-block px-6 py-3 rounded-lg bg-white border border-gray-200 text-gray-700 font-medium">
            Lovosis Display Solutions © {new Date().getFullYear()} • All Rights Reserved
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Add any custom styles here */
  section {
    scroll-margin-top: 80px;
  }
</style>