---
import Layout from '../layouts/Layout.astro';

// SEO Optimization
const title = "Cookie Policy | Lovosis Display Solutions | Official Display Distributors";
const description = "Learn how Lovosis Display Solutions uses cookies on our website to enhance your browsing experience when researching and ordering professional display products and solutions.";

// Structured Data / Schema Markup
const sd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "Lovosis Display Solutions Cookie Policy",
  "description": "Information about cookie usage on the official display distribution website",
  "publisher": {
    "@type": "Organization",
    "name": "Lovosis Display Solutions",
    "logo": "https://www.lovosisdisplay.com/logo.png"
  },
  "inLanguage": "en-US",
  "isPartOf": {
    "@type": "WebSite",
    "name": "Lovosis Display Solutions",
    "url": "https://www.lovosisdisplay.com"
  },
  "mainEntity": {
    "@type": "WebContent",
    "headline": "Cookie Policy",
    "text": "Information about how Lovosis Display Solutions uses cookies and similar technologies",
    "datePublished": "2024-09-15",
    "dateModified": "2025-03-01"
  }
};

// Last updated date
const lastUpdated = "March 1, 2025";

// Cookie Policy Sections
const cookieSections = [
  {
    title: "What Are Cookies",
    content: "Cookies are small text files stored on your device when you visit our website. They help our display product catalog function correctly and improve your browsing experience. As display distributors, we use cookies to remember your preferences, product interests, and help you navigate our extensive catalog of screens, monitors, and digital signage solutions.",
    icon: "M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
  },
  {
    title: "Types of Cookies We Use",
    content: "We use several types of cookies on our display distribution website: (1) Essential cookies necessary for basic functionality, (2) Preference cookies that remember your browsing preferences, (3) Analytics cookies that help us understand how visitors interact with our display catalog, and (4) Marketing cookies that help us deliver relevant display product information.",
    icon: "M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"
  },
  {
    title: "How We Use Cookies",
    content: "As official display distributors, we use cookies to enhance your browsing experience, remember which display technologies you've viewed, maintain shopping carts, process orders, and analyze traffic patterns. This helps us improve our website and provide personalized recommendations for display solutions that match your specific requirements and interests.",
    icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"
  },
  {
    title: "Third-Party Cookies",
    content: "Our website includes cookies from trusted display manufacturing partners and analytics providers. When you browse specific display product categories or specifications, these cookies help us show you relevant information from our manufacturing partners. This facilitates a seamless experience when selecting and ordering display technology through our distribution channels.",
    icon: "M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
  },
  {
    title: "Cookie Management",
    content: "You can manage cookies through your browser settings. You can choose to block or delete cookies, though this may impact your browsing experience on our display distribution website. Some features related to product configuration, display specifications, and order processing may not function properly if certain cookies are disabled.",
    icon: "M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"
  },
  {
    title: "Cookie Duration",
    content: "We use both session cookies that expire when you close your browser and persistent cookies that remain on your device for a set period. For display product configurators and pricing tools, we may use cookies that persist longer to remember your custom specifications and streamline future visits to our distribution platform.",
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
  }
];

// Manufacturer Partners (for third-party cookies section)
const manufacturerPartners = [
  "Samsung Display", "LG Commercial", "NovaStar", 
  "Sony Professional", "Philips Signage", "Barco"
];

// Cookie Types Table
const cookieTypesTable = [
  {
    category: "Essential",
    purpose: "Website functionality, security, account access",
    duration: "Session to 1 year",
    examples: ["session_id", "csrf_token", "auth_cookie"]
  },
  {
    category: "Preferences",
    purpose: "Remember display preferences and settings",
    duration: "Up to 2 years",
    examples: ["display_size_preference", "resolution_filter", "ui_theme"]
  },
  {
    category: "Analytics",
    purpose: "Understand user behavior and improve site",
    duration: "Up to 2 years",
    examples: ["_ga", "_gid", "visitor_id"]
  },
  {
    category: "Marketing",
    purpose: "Track across sites for relevant display ads",
    duration: "Up to 2 years",
    examples: ["_fbp", "_gcl_au", "ads_conversion"]
  }
];

// Contact Information
const contactInfo = {
  email: "privacy@lovosisdisplay.com",
  phone: "+1 (555) 123-4567"
};
---

<Layout title={title} description={description} sd={sd}>
  <main class="bg-white">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-blue-700 to-indigo-800 py-20">
      <div class="absolute inset-0 overflow-hidden opacity-20">
        <div class="absolute top-20 left-1/4 w-64 h-64 bg-blue-300 rounded-full mix-blend-multiply filter blur-3xl"></div>
        <div class="absolute bottom-20 right-1/4 w-64 h-64 bg-indigo-300 rounded-full mix-blend-multiply filter blur-3xl"></div>
      </div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-3xl mx-auto text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
            Cookie Policy
          </h1>
          <p class="text-xl text-blue-100 max-w-2xl mx-auto">
            How we use cookies to enhance your experience on our display distribution platform
          </p>
          <div class="mt-8 text-blue-100 text-sm">
            Last Updated: {lastUpdated}
          </div>
        </div>
      </div>
    </section>

    <!-- Introduction Section -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="bg-blue-50 rounded-2xl p-8 border border-blue-100 mb-12">
            <div class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-4">
                <h2 class="text-xl font-semibold text-gray-900 mb-2">About This Cookie Policy</h2>
                <p class="text-gray-600">
                  This Cookie Policy explains how Lovosis Display Solutions, as official distributors of premium display technology, uses cookies and similar technologies to recognize you when you visit our website. It explains what these technologies are and why we use them, as well as your rights to control our use of them when browsing our display catalog and distribution platform.
                </p>
              </div>
            </div>
          </div>

          <!-- Cookie Policy Sections -->
          <div class="space-y-16">
            {cookieSections.map(section => (
              <div class="flex flex-col md:flex-row md:items-start gap-8">
                <div class="md:w-16 flex-shrink-0">
                  <div class="w-12 h-12 rounded-lg bg-blue-100 flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={section.icon}></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h2 class="text-2xl font-bold text-gray-900 mb-4">{section.title}</h2>
                  <p class="text-lg text-gray-600 leading-relaxed">{section.content}</p>
                </div>
              </div>
            ))}
          </div>

          <!-- Cookie Types Table -->
          <div class="mt-20">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Detailed Cookie Information</h2>
            <div class="overflow-hidden border border-gray-200 rounded-xl shadow-sm">
              <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Category
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Purpose
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Duration
                    </th>
                    <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                      Examples
                    </th>
                  </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                  {cookieTypesTable.map((row, index) => (
                    <tr class={index % 2 === 0 ? "bg-white" : "bg-gray-50"}>
                      <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {row.category}
                      </td>
                      <td class="px-6 py-4 whitespace-normal text-sm text-gray-600">
                        {row.purpose}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        {row.duration}
                      </td>
                      <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        <div class="flex flex-wrap gap-1">
                          {row.examples.map(example => (
                            <span class="px-2 py-1 bg-blue-50 text-blue-700 text-xs rounded-md">{example}</span>
                          ))}
                        </div>
                      </td>
                    </tr>
                  ))}
                </tbody>
              </table>
            </div>
          </div>

          <!-- Third-Party Manufacturer Cookies -->
          <div class="mt-16 p-8 bg-gradient-to-br from-gray-50 to-blue-50 rounded-xl border border-blue-100">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Display Manufacturer Partner Cookies</h2>
            <p class="text-lg text-gray-600 mb-8">
              As official distributors of display technology, our website includes content and cookies from our manufacturing partners. These cookies help provide accurate product information, warranty details, and technical specifications directly from the manufacturers:
            </p>
            
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {manufacturerPartners.map(partner => (
                <div class="py-3 px-4 bg-white rounded-lg border border-gray-200 text-center">
                  <span class="text-gray-800">{partner}</span>
                </div>
              ))}
            </div>
            
            <p class="mt-8 text-gray-600">
              Each manufacturer may set their own cookies when you view their specific product lines or technical documentation on our distribution platform. This ensures you receive the most current product information directly from the source.
            </p>
          </div>

          <!-- Cookie Management -->
          <div class="mt-16 p-8 bg-white rounded-xl border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Managing Your Cookie Preferences</h2>
            <p class="text-lg text-gray-600 mb-8">
              You can manage or delete cookies based on your preferences through your browser settings. Below are links to instructions for managing cookies in popular browsers:
            </p>
            
            <div class="grid md:grid-cols-2 gap-4 mb-8">
              <a href="https://support.google.com/chrome/answer/95647" target="_blank" rel="noopener" class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C8.21 0 5.831 1.347 4.665 4.04c2.491.554 4.515 2.402 5.233 4.962.445-.27.94-.432 1.465-.432.363 0 .723.057 1.063.167l4.913-8.274C16.467.922 15.28.5 12 .5 6.753.5 2.394 5.668 2.394 12c0 6.334 5.127 11.5 11.413 11.5S23.517 17.658 23.517 12c0-1.696-.324-3.309-.914-4.785h-5.207c2.328.005 4.234 1.632 4.234 3.66 0 2.136-2.055 3.872-4.857 3.872-2.942 0-5.075-1.607-5.097-3.753-.039.413-.06.837-.06 1.266 0 3.745 1.5 7.136 3.926 9.624A11.493 11.493 0 0012 23.5c6.35 0 11.5-5.149 11.5-11.5S18.35.5 12 .5z"/>
                </svg>
                <span>Google Chrome</span>
              </a>
              <a href="https://support.mozilla.org/en-US/kb/clear-cookies-and-site-data-firefox" target="_blank" rel="noopener" class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M21.634 11.198a2.403 2.403 0 00-.05-.238c.48.535.78 1.584-.01 2.535-.95 1.9-3.68 3.95-7.77 3.88-4.3-.09-8.02-3.14-8.14-7.48.33 2 1.49 3.48 3 4.22.2-.47.36-.94.48-1.42-1.52-3.24.27-5.96.96-7.35.12 1.35.5 2.78 1.32 3.94-.98-2.95.19-4.47.63-5.29 0 0 .13.78.77 1.97.4.74.54 1.98.54 1.98.36-.53.68-1.39.67-2.69-.03-.15.14-.32 0-.45.3.45.76 1.32.75 2.74-.33-.57-3.28-5.58-3.28-5.58 1.59 1.77 4.34 5.85 4.41 8.04 0 0-1.22-1.61-2.63-1.65-.13-.38-.25-.77-.34-1.16-.33-1.44-1.34-2.77-2.39-3.42 1.81-.03 3.27.63 4.08 1.6.05-.12.1-.23.14-.35.24-.77.3-1.88.3-2.59 0-.71-.18-1.83-.18-1.83.38.69.69 1.41.89 2.16.34 1.27.48 2.62.44 3.97-.19-.61-.52-1.16-.92-1.63-2.03-2.47-5.33-2.26-5.33-2.26 3.22.39 4.32 2.34 4.32 2.34.18.36.32.74.43 1.13 2.64 1.18 1.88 3.78 1.88 3.78.51-.96.64-2.31.58-3.08 3.65 2.78 3.41 7.52 3.15 6.67z"/>
                </svg>
                <span>Mozilla Firefox</span>
              </a>
              <a href="https://support.apple.com/en-us/HT201265" target="_blank" rel="noopener" class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.152 6.896c-.948 0-2.415-1.078-3.96-1.04-2.04.027-3.91 1.183-4.961 3.014-2.117 3.675-.546 9.103 1.519 12.08 1.013 1.454 2.208 3.09 3.792 3.039 1.52-.065 2.09-.987 3.935-.987 1.831 0 2.35.987 3.96.948 1.637-.026 2.676-1.48 3.676-2.948 1.156-1.688 1.636-3.325 1.662-3.415-.039-.013-3.182-1.221-3.22-4.857-.026-3.04 2.48-4.494 2.597-4.559-1.429-2.09-3.623-2.324-4.39-2.376-2-.156-3.675 1.09-4.61 1.09zM15.53 3.83c.843-1.012 1.4-2.427 1.245-3.83-1.207.052-2.662.805-3.532 1.818-.78.896-1.454 2.338-1.273 3.714 1.338.104 2.715-.688 3.559-1.701"/>
                </svg>
                <span>Safari</span>
              </a>
              <a href="https://support.microsoft.com/en-us/microsoft-edge/delete-cookies-in-microsoft-edge-63947406-40ac-c3b8-57b9-2a946a29ae09" target="_blank" rel="noopener" class="flex items-center p-4 bg-gray-50 rounded-lg border border-gray-200 hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-gray-500 mr-3" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C7.03 0 3 4.03 3 9v6c0 4.97 4.03 9 9 9s9-4.03 9-9V9c0-4.97-4.03-9-9-9zm0 2c3.86 0 7 3.14 7 7v6c0 3.86-3.14 7-7 7s-7-3.14-7-7V9c0-3.86 3.14-7 7-7zm-1.5 6c-.83 0-1.5.67-1.5 1.5v7c0 .83.67 1.5 1.5 1.5h3c.83 0 1.5-.67 1.5-1.5v-7c0-.83-.67-1.5-1.5-1.5h-3z"/>
                </svg>
                <span>Microsoft Edge</span>
              </a>
            </div>
            
            <div class="p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
              <div class="flex items-start">
                <svg class="w-5 h-5 text-yellow-600 mt-0.5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                  <h3 class="text-base font-medium text-yellow-800">Important Note for Display Distribution Clients</h3>
                  <p class="mt-2 text-sm text-yellow-700">
                    Disabling certain cookies may impact your ability to browse our product catalog effectively, configure display specifications, obtain accurate pricing, or place orders through our distribution platform. Features like saved product comparisons, screen configuration tools, and recent view history may not function properly without essential cookies.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact Information -->
          <div class="mt-16 p-8 bg-gray-50 rounded-xl border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900 mb-6">Questions About Our Cookie Policy?</h2>
            <p class="text-lg text-gray-600 mb-8">
              If you have questions about our cookie practices or would like more information, please contact our privacy team:
            </p>
            
            <div class="flex flex-col sm:flex-row gap-6">
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-500 mb-1">Email</div>
                  <div class="text-gray-900">{contactInfo.email}</div>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div class="ml-3">
                  <div class="text-sm font-medium text-gray-500 mb-1">Phone</div>
                  <div class="text-gray-900">{contactInfo.phone}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer Line -->
    <section class="py-12 bg-gray-50 border-t border-gray-200">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-gray-600">
            Lovosis Display Solutions — Official Distributors of Premium Display Technology
          </p>
          <p class="text-sm text-gray-500 mt-2">
            © {new Date().getFullYear()} Lovosis Display Solutions. All Rights Reserved.
          </p>
        </div>
      </div>
    </section>
  </main>
</Layout>