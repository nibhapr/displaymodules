  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .progress-bar {
    transition: width 5.95s linear;
  }
  
  .carousel-image {
    transition: transform 7s ease-out;
  }
</style>