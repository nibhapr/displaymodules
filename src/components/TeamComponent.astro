---
const teamMembers = [
  {
    name: "Sarah Johnson",
    role: "CEO & Founder",
    image: "https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e?q=80&w=1974&auto=format&fit=crop",
    bio: "10+ years experience in display technology",
    social: {
      linkedin: "#",
      twitter: "#",
      email: "mailto:sarah@example.com"
    }
  },
  {
    name: "David Chen",
    role: "Technical Director",
    image: "https://images.unsplash.com/photo-1556157382-97eda2d62296?q=80&w=2070&auto=format&fit=crop",
    bio: "Expert in LED display systems",
    social: {
      linkedin: "#",
      twitter: "#",
      email: "mailto:david@example.com"
    }
  },
  {
    name: "Emily Rodriguez",
    role: "Sales Director",
    image: "https://images.unsplash.com/photo-1580489944761-15a19d654956?q=80&w=1961&auto=format&fit=crop",
    bio: "Specializing in enterprise solutions",
    social: {
      linkedin: "#",
      twitter: "#",
      email: "mailto:emily@example.com"
    }
  },
  {
    name: "Michael Kim",
    role: "Product Manager",
    image: "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?q=80&w=2070&auto=format&fit=crop",
    bio: "Innovation in display technology",
    social: {
      linkedin: "#",
      twitter: "#",
      email: "mailto:michael@example.com"
    }
  }
];
---

<section class="py-20 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Section Header -->
   

    <!-- Team Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {teamMembers.map((member) => (
        <div class="group relative">
          <!-- Card Container -->
          <div class="relative overflow-hidden rounded-xl bg-white shadow-lg transform transition-all duration-500 hover:scale-105">
            <!-- Image Container -->
            <div class="relative h-80 overflow-hidden">
              <img
                src={member.image}
                alt={member.name}
                class="w-full h-full object-cover object-center transform transition-transform duration-700 group-hover:scale-110"
                loading="lazy"
              />
              <!-- Overlay -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/30 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <!-- Social Icons -->
                <div class="absolute bottom-4 left-0 right-0 flex justify-center space-x-4 transform translate-y-10 group-hover:translate-y-0 transition-transform duration-300">
                  <a href={member.social.linkedin} class="p-2 bg-white/20 backdrop-blur-sm rounded-full hover:bg-blue-600 transition-colors">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                    </svg>
                  </a>
                  <a href={member.social.twitter} class="p-2 bg-white/20 backdrop-blur-sm rounded-full hover:bg-blue-400 transition-colors">
                    <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23 3a10.9 10.9 0 01-3.14 1.53 4.48 4.48 0 00-7.86 3v1A10.66 10.66 0 013 4s-4 9 5 13a11.64 11.64 0 01-7 2c9 5 20 0 20-11.5a4.5 4.5 0 00-.08-.83A7.72 7.72 0 0023 3z"/>
                    </svg>
                  </a>
                  <a href={member.social.email} class="p-2 bg-white/20 backdrop-blur-sm rounded-full hover:bg-red-500 transition-colors">
                    <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
            <!-- Content -->
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-900">{member.name}</h3>
              <p class="text-blue-600 font-medium mb-2">{member.role}</p>
              <p class="text-gray-600 text-sm">{member.bio}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  /* Optional: Add custom animations */
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .group:hover {
    animation: float 6s ease-in-out infinite;
  }
</style>