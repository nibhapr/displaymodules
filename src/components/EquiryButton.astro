---
const contactInfo = {
  email: "jadeeb04@gmail.com",
  whatsapp: "918409528159", // Format for WhatsApp API
  // Add greeting message
  whatsappGreeting: "Hello! ðŸ‘‹ Thank you for contacting UNV Display Solutions. How can we assist you today?"
};
---

<div class="fixed bottom-8 left-8 z-50">
  <!-- Main Button -->
  <div class="relative group">
    <button
      id="enquiryBtn"
      class="w-16 h-16 bg-gradient-to-r from-blue-600 to-blue-800 rounded-full flex items-center justify-center shadow-lg transform transition-all duration-300 hover:scale-110 hover:shadow-blue-500/50"
    >
      <svg
        class="w-8 h-8 text-white"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
        />
      </svg>
    </button>

    <!-- Options Menu -->
    <div
      id="optionsMenu"
      class="absolute bottom-full left-0 mb-4 transform scale-0 opacity-0 transition-all duration-300 origin-bottom-left"
    >
      <div class="flex flex-col gap-3 items-end">
        <!-- Email Option -->
        <a
          href={`mailto:${contactInfo.email}`}
          class="flex items-center gap-2 px-4 py-2 bg-white rounded-lg shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl group"
        >
          <span class="text-gray-700 font-medium">Email Us</span>
          <div class="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
            <svg
              class="w-5 h-5 text-white"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              />
            </svg>
          </div>
        </a>

        <!-- WhatsApp Option -->
        <a
          href={`https://wa.me/${contactInfo.whatsapp}?text=${encodeURIComponent(contactInfo.whatsappGreeting)}`}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 px-4 py-2 bg-white rounded-lg shadow-lg transform transition-all duration-300 hover:scale-105 hover:shadow-xl"
        >
          <span class="text-gray-700 font-medium">WhatsApp</span>
          <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
            <svg
              class="w-5 h-5 text-white"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M12.031 6.172c-3.181 0-5.767 2.586-5.768 5.766-.001 1.298.38 2.27 1.019 3.287l-.582 2.128 2.182-.573c.978.58 1.911.928 3.145.929 3.178 0 5.767-2.587 5.768-5.766.001-3.187-2.575-5.77-5.764-5.771zm3.392 8.244c-.144.405-.837.774-1.17.824-.299.045-.677.063-1.092-.069-.252-.08-.575-.187-.988-.365-1.739-.751-2.874-2.502-2.961-2.617-.087-.116-.708-.94-.708-1.793s.448-1.273.607-1.446c.159-.173.346-.217.462-.217l.332.006c.106.005.249-.04.39.298.144.347.491 1.2.534 1.287.043.087.072.188.014.304-.058.116-.087.188-.173.289l-.26.304c-.087.086-.177.18-.076.354.101.174.449.741.964 1.201.662.591 1.221.774 1.394.86s.274.072.376-.043c.101-.116.433-.506.549-.68.116-.173.231-.145.39-.087s1.011.477 1.184.564.289.13.332.202c.045.072.045.419-.1.824zm-3.423-14.416c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm.029 18.88c-1.161 0-2.305-.292-3.318-.844l-3.677.964.984-3.595c-.607-1.052-.927-2.246-.926-3.468.001-3.825 3.113-6.937 6.937-6.937 1.856.001 3.598.723 4.907 2.034 1.31 1.311 2.031 3.054 2.03 4.908-.001 3.825-3.113 6.938-6.937 6.938z"
              />
            </svg>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>

<script>
  const enquiryBtn = document.getElementById('enquiryBtn');
  const optionsMenu = document.getElementById('optionsMenu');
  let isOpen = false;

  enquiryBtn?.addEventListener('click', () => {
    isOpen = !isOpen;
    if (isOpen) {
      optionsMenu?.classList.remove('scale-0', 'opacity-0');
      optionsMenu?.classList.add('scale-100', 'opacity-100');
    } else {
      optionsMenu?.classList.remove('scale-100', 'opacity-100');
      optionsMenu?.classList.add('scale-0', 'opacity-0');
    }
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!enquiryBtn?.contains(e.target as Node) && !optionsMenu?.contains(e.target as Node)) {
      optionsMenu?.classList.remove('scale-100', 'opacity-100');
      optionsMenu?.classList.add('scale-0', 'opacity-0');
      isOpen = false;
    }
  });
</script>

<style>
  /* Optional: Add pulse animation to the main button */
  @keyframes pulse {
    0% { box-shadow: 0 0 0 0 rgba(37, 99, 235, 0.7); }
    70% { box-shadow: 0 0 0 10px rgba(37, 99, 235, 0); }
    100% { box-shadow: 0 0 0 0 rgba(37, 99, 235, 0); }
  }

  #enquiryBtn {
    animation: pulse 2s infinite;
  }
</style>